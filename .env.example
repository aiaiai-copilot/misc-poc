# Environment Configuration
NODE_ENV="development"                                 # Environment: development, production, test
PORT=3000                                             # Server port
HOST="localhost"                                      # Server host

# PostgreSQL Database Configuration
POSTGRES_DB="misc_poc_dev"                           # Database name for development
POSTGRES_USER="postgres"                             # Database username
POSTGRES_PASSWORD="your_secure_password_here"        # Database password - CHANGE THIS!
DATABASE_URL="postgresql://postgres:your_secure_password_here@localhost:5432/misc_poc_dev"

# Database Connection Pool Settings
DB_POOL_MIN=2                                        # Minimum pool connections
DB_POOL_MAX=10                                       # Maximum pool connections
DB_CONNECTION_TIMEOUT=30000                          # Connection timeout in milliseconds

# JWT Authentication Configuration
JWT_SECRET="your_super_secret_jwt_key_change_me"     # JWT signing secret - CHANGE THIS!
JWT_EXPIRES_IN="15m"                                 # Access token expiration
JWT_REFRESH_SECRET="your_refresh_secret_change_me"   # Refresh token secret - CHANGE THIS!
JWT_REFRESH_EXPIRES_IN="7d"                         # Refresh token expiration

# Google OAuth Configuration
GOOGLE_CLIENT_ID="your_google_client_id_here"       # Google OAuth Client ID
GOOGLE_CLIENT_SECRET="your_google_client_secret_here" # Google OAuth Client Secret
GOOGLE_REDIRECT_URI="http://localhost:3000/auth/google/callback" # OAuth redirect URI

# API Keys (Required to enable respective provider)
ANTHROPIC_API_KEY="your_anthropic_api_key_here"       # Required: Format: sk-ant-api03-...
PERPLEXITY_API_KEY="your_perplexity_api_key_here"     # Optional: Format: pplx-...
OPENAI_API_KEY="your_openai_api_key_here"             # Optional, for OpenAI models. Format: sk-proj-...
GOOGLE_API_KEY="your_google_api_key_here"             # Optional, for Google Gemini models.
MISTRAL_API_KEY="your_mistral_key_here"               # Optional, for Mistral AI models.
XAI_API_KEY="YOUR_XAI_KEY_HERE"                       # Optional, for xAI AI models.
GROQ_API_KEY="YOUR_GROQ_KEY_HERE"                     # Optional, for Groq models.
OPENROUTER_API_KEY="YOUR_OPENROUTER_KEY_HERE"         # Optional, for OpenRouter models.
AZURE_OPENAI_API_KEY="your_azure_key_here"            # Optional, for Azure OpenAI models (requires endpoint in .taskmaster/config.json).
OLLAMA_API_KEY="your_ollama_api_key_here"             # Optional: For remote Ollama servers that require authentication.
GITHUB_API_KEY="your_github_api_key_here"             # Optional: For GitHub import/export features. Format: ghp_... or github_pat_...